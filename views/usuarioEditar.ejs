<!DOCTYPE html>
<html lang="pt-br">
<%- include("includes/head") %>
  <body>
<%- include("includes/header") %>
    <main class="container">

    <h1><%= title %></h1>

    <form action="/user/edit/<%= usuario.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

      <label for="nomeUsuario">Nome de usuário</label><br>
      <input type="text" id="nomeUsuario" name="nomeUsuario" placeholder="Nome de usuário" value="<%= usuario.nomeUsuario %>"><br>

      <label for="email">E-mail</label><br>
      <input type="email" id="email" name="email" placeholder="E-mail" value="<%= usuario.email %>"><br>

      <label for="senha">Senha</label><br>
      <input type="password" id="senha" name="senha" placeholder="Senha" value="<%= usuario.senha %>"><br>

      <label for="nome">Nome</label><br>
      <input type="text" id="nome" name="nome" placeholder="Nome" value="<%= usuario.nome %>"><br>

      <label for="avatar">Avatar</label><br>
      <input type="file" id="avatar" name="avatar" placeholder="Avatar" value="<%= usuario.avatar %>"><br>

      <label for="descricao">Descrição</label><br>
      <textarea id="descricao" name="descricao" placeholder="Descrição" rows="3" cols="25"><%= usuario.descricao %></textarea><br>

      <label for="dataNascimento">Data de nascimento</label><br>
      <input type="date" id="dataNascimento" name="dataNascimento" placeholder="Data de nascimento"
        value="<%= usuario.dataNascimento %>"><br>

      <label for="genero">Gênero</label><br>
      <input type="radio" id="male" name="genero" value="<%= usuario.genero %>">
      <label for="masculino">Masculino</label><br>
      <input type="radio" id="female" name="genero" value="<%= usuario.genero %>">
      <label for="feminino">Feminino</label><br>
      <input type="radio" id="other" name="genero" value="<%= usuario.genero %>">
      <label for="outro">Outro</label><br>

      <label for="localizacao">Localização</label><br>
      <input type="text" id="localizacao" name="localizacao" placeholder="Localização" value="<%= usuario.localizacao %>"><br>

      <label for="emailSecundario">E-mail secundário</label><br>
      <input type="email" id="emailSecundario" name="emailSecundario" placeholder="E-mail secundário" value="<%= usuario.emailSecundario %>"><br>
      
      <label for="celular">Celular</label><br>
      <input type="tel" id="celular" name="celular" placeholder="Celular" value="<%= usuario.celular %>"><br><br>

      <button type="submit">Salvar alterações</button><br><br>
      <a href="/users"><button type="button">Cancelar</button></a>

    </form>

    <br><br><br><br>

    </main>
<%- include("includes/footer") %>
<%- include("includes/scripts") %>
  </body>
</html>
