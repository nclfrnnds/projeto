<!DOCTYPE html>
<html lang="pt-br">
<%- include("includes/head") %>
  <body>
<%- include("includes/header") %>
    <main class="container">

    <h1><%= title %></h1>

    <p><a href="/admin/rating/new"><button type="button">Adicionar</button></a></p>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Classificação</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% classificacoes.forEach(classificacao => { %>
        <tr>
          <th scope="row"> <%= classificacao.id %></th>
          <th> <%= classificacao.nome %></th>
          <th>
            <a href="/admin/rating/edit/<%= classificacao.id %>" class="btn btn-warning">Editar</a>
            <form action="/admin/rating/delete/<%= classificacao.id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
          </th>
        </tr>
        <% }); %>
      </tbody>
    </table>

    </main>
<%- include("includes/footer") %>
<%- include("includes/scripts") %>
  </body>
</html>
