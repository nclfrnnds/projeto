<!DOCTYPE html>
<html lang="pt-br">
<%- include("../../includes/head") %>
  <body>
    <div class="divPrincipal">
<%- include("../../includes/header") %>
    <main class="mainPrincipal mainIndexCategorias">

    <h1 class="tituloIndexCategorias"><%= title %></h1>

    <p><a href="/admin/category/new"><button type="button" class="btnAdicionar">Adicionar</button></a></p>

    <table class="tabelaDados">
        <tr>
          <th>Categoria</th>
          <th>Descrição</th>
          <th>Ações</th>
        </tr>
        <% categorias.forEach(categoria => { %>
        <tr>
          <td> <%= categoria.nome %></td>
          <td> <%= categoria.descricao %></td>
          <td>
            <a href="/admin/category/edit/<%= categoria.id %>"><button type="button" class="btnEditar">Editar</button></a>
            <form action="/admin/category/delete/<%= categoria.id %>?_method=DELETE" method="POST">
              <button type="submit" class="btnExcluir">Excluir</button>
            </form>
          </td>
        </tr>
        <% }); %>
    </table>
    
    </main>
<%- include("../../includes/footer") %>
<%- include("../../includes/scripts") %>
    </div>
  </body>
</html>
