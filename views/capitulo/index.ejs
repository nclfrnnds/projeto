<!DOCTYPE html>
<html lang="pt-br">
<%- include("../includes/head") %>
  <body>
    <div class="divPrincipal">
<%- include("../includes/header") %>
    <main class="mainPrincipal mainListarCapitulos">

    <h1 class="tituloListarCapitulos"><%= title %></h1>

    <table class="tabelaDados">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Capítulo</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% capitulos.forEach(capitulo => { %>
        <tr>
          <th scope="row"> <%= capitulo.id %></th>
          <th> <%= capitulo.titulo %></th>
          <th>

            <% if (typeof authUsuario !== "undefined") { %>

            <a href="/story/<%= historia.diretorio %>/chapter/<%= capitulo.texto %>"><button type="button" class="btnLer">Ler</button></a>

            <% } else if (typeof authAdmin !== "undefined") { %>

            <a href="/story/<%= historia.diretorio %>/chapter/<%= capitulo.texto %>"><button type="button" class="btnLer">Ler</button></a>
            
            <form action="/story/<%= historia.diretorio %>/chapter/<%= capitulo.texto %>/delete?_method=DELETE" method="POST">
              <button type="submit" class="btnExcluir">Excluir</button>
            </form>

            <% } %>

          </th>
        </tr>
        <% }); %>
      </tbody>
    </table>

    </main>
<%- include("../includes/footer") %>
<%- include("../includes/scripts") %>
    </div>
  </body>
</html>
