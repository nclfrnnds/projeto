<!DOCTYPE html>
<html lang="pt-br">
<%- include("../includes/head") %>
  <body>
    <div class="divPrincipal">
<%- include("../includes/header") %>
    <main class="mainPrincipal mainEditarCapitulo">

    <h1 class="tituloEditarCapitulo"><%= title %></h1>

    <form action="/story/<%= historia.diretorio %>/chapter/<%= capitulo.texto %>/edit?_method=PUT" method="POST">

      <label for="titulo">Título</label><br>
      <input type="text" id="titulo" name="titulo" placeholder="Título" value="<%= capitulo.titulo %>"><br>

      <label for="notasIniciais">Notas iniciais</label><br>
      <textarea id="notasIniciais" name="notasIniciais" placeholder="Notas iniciais" rows="5" cols="40"><%= capitulo.notasIniciais %></textarea><br>

      <label for="texto">Texto</label><br>
      <textarea id="texto" name="texto" placeholder="Texto" rows="10" cols="50"><%= arquivoTxt %></textarea><br>

      <label for="notasFinais">Notas finais</label><br>
      <textarea id="notasFinais" name="notasFinais" placeholder="Notas finais" rows="5" cols="40"><%= capitulo.notasFinais %></textarea><br><br>

      <button type="submit" class="btnSalvar">Salvar alterações</button><br><br>
      <a href="/story/<%= historia.diretorio %>/chapters"><button type="button" class="btnCancelar">Cancelar</button></a>

    </form>

    </main>
<%- include("../includes/footer") %>
<%- include("../includes/scripts") %>
    </div>
  </body>
</html>
